<%= form_with  model: @book do |form| %>
<div class="container">

    <h1 class="text-center">Add Books</h1>
    <div class="row">  
      <div class="col-4">
        <%= form.label :name %><br>
        <%= form.text_field :name , class:"form-control" %>
        <% @book.errors.full_messages_for(:name).each do |message| %>
          <p class="text-danger"> <%= message %> </p>
        <% end %>
        
      </div>
    </div><br/>

    <div class="row">
      <div class="col-4">
        <%= form.label :price %><br>
        <%= form.text_field :price, class:"form-control" %>
        <% @book.errors.full_messages_for(:price).each do |message| %>
          <p class="text-danger"> <%= message %> </p>
        <% end %>
       
      </div>
    </div> <br/>

  <div class="row">
      <div class="col-4">
        <%= form.label :author_id %><br>
        <%= form.select(:author_id, @auth_name) %>
      </div>
    </div> <br/>


    <div>
      <%= form.submit 'Insert data', class:"btn btn-primary" %>
    </div>
    
</div>

<% end %>