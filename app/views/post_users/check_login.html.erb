<div align="center">
  <%= form_with(url: login_path, method: :post) do |form| %>
    <%= form.label 'Email' %>
    <%= form.text_field :email %><br><br>

    <%= form.label 'Password' %>
    <%= form.password_field :password %><br><br>
    
    <%= form.submit 'Login' %> &nbsp; &nbsp;
    <%= link_to 'Register user', new_post_user_path %>
  <% end %>
</div>