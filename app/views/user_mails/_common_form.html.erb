<%= form_with model: @user do |form| %>
  <div class="container">
    <h1 class="text-center">User</h1>
    <div class="row">  
      <div class="col-4">
        <%= form.label :name %><br>
        <%= form.text_field :name, class: "form-control" %>
        <%= custom_error(@user, :name) %>
      </div>
    </div><br/>
   
    <div class="row">
      <div class="col-4">
        <%= form.label :email %><br>
        <%= form.email_field :email, class: "form-control" %>
        <%= custom_error(@user, :email) %>
      </div>
    </div> <br/>

    <div class="row">
      <div class="col-4">
        <%= form.label :image %><br>
        <%= form.file_field :image, class: "form-control" %>
        <%= label :image, @image_name, class: 'custom-file-label', for: 'image' %>
        <%= custom_error(@user, :image) %>
      </div>
    </div> <br/>
    
    <div>
      <%= form.submit "Insert data", class: "btn btn-primary" %>   
    </div>      
  </div>

<% end %>