<%= form_with model: @faculty do |form| %>
    <div class="container">

        <h1 class="text-center">Add Faculties</h1>
        <div class="row">  
            <div class="col-4">
                <%= form.label :first_name %><br>
                <%= form.text_field :first_name , class:"form-control" %>
            </div>
        </div><br/>

        <div class="row">
            <div class="col-4">
                <%= form.label :last_name %><br>
                <%= form.text_field :last_name, class:"form-control" %>
            </div>
        </div> <br/>

        <div class="row">
            <div class="col-4">
                <%= form.label :dob %><br>
                <%= form.date_field :dob, class:"form-control" %>
            </div>
        </div> <br/>

        <div class="row">
            <div class="col-4">
                <%= form.label :phone_number %><br>
                <%= form.text_field :phone_number, class:"form-control" %>
            </div>
        </div> <br/>

        <div class="row">
            <div class="col-4">
                <%= form.label :email %><br>
                <%= form.text_field :email, class:"form-control" %>
            </div>
        </div> <br/>
        
        
        

        <div class="row">
            <div class="col-4">
                <%= form.label :designation %><br>
                <%= form.select :designation, @fac_des %>
            </div>
        </div> <br/>


        <div>
        <%= form.submit 'Insert data', class:"btn btn-primary" %>
    </div>
        
</div>

<% end %>