<%= form_with model: @product do |form| %>
  <div class="container">
    <h1 class="text-center">Update Products</h1>
    <div class="row">  
     
      <div class="col-4">
        <%= form.label :title %><br>
        <%= form.text_field :title, class: "form-control" %>
				<%= custom_error(@product, :title) %>
      </div>
    </div><br/>

    <div class="row">
      <div class="col-4">
        <%= form.label :price %><br>
        <%= form.text_field :price, class: "form-control" %>
				<%= custom_error(@product, :price) %>
      </div>
    </div> <br/>

    <div class="row">
      <div class="col-4">
        <%= form.label :company_name %><br>
        <%= form.text_field :company_name, class: "form-control" %>
				<%= custom_error(@product, :company_name) %>
      </div>
    </div> <br/>
    
    <div>
      <%= form.submit "Update data", class: "btn btn-primary" %>   
    </div>
        
</div>

<% end %>