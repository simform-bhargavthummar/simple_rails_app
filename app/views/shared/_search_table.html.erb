<div align="center">
  <table class="table table-striped">
    <thead>
      <tr> 
        <th scope="col"> Id </th> 
        <th scope="col"> Name </th>
        <th scope="col"> Email </th>
        <th scope="col"> Gender </th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td> <%= employee.id %> </td>
          <td> <%= employee.employee_name %> </td>
          <td> <%= employee.email %> </td>
          <td> <%= employee.gender %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>