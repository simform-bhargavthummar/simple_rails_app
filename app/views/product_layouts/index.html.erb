<div class="container text-center">
  <div class="row justify-content-md-center">
    <% if current_user_layout.admin? %>
      <%= link_to 'Add Product', new_product_layout_path %>
    <% end %>
    <h2> Products </h2>
    <div class="col"> 
      <table class="table table-striped">
        <thead>
          <tr>  
            <th scope="col"> Id </th>
            <th scope="col"> Product name </th>
            <th scope="col"> Description </th>
            <th scope="col"> Price </th> 
            <th colspan=2></th>  
        </tr>
        </thead>

        <tbody>
          <% @products.each do |product|  %>
            <tr>
              <td> <%= product.id %> </td>
              <td> <%= product.name %> </td>
              <td> <%= product.description %> </td>
              <td> <%= product.price %> </td>
              <% if current_user_layout.admin? %>
                  <td> <%= link_to 'Update record', 
                    edit_product_layout_path(product.id),
                    class: "btn btn-primary" %> </td>
                  <td> <%= link_to 'Delete record', 
                    product_layout_path(product.id), 
                    data: {turbo_method: :delete, 
                      turbo_confirm: "Confirmation for delete the product"},
                    class: "btn btn-primary" %> </td> 
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>