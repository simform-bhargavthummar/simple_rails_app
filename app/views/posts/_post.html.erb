<%= turbo_frame_tag "post_#{post.id}" do %>
  <div class="post">
    <div class="container text-center">
        <div class="card">
          <div class="card-body"><br>
            <div class="row ">

              <div class="col-sm-3">
                <%= label_tag post.title %> 
              </div>

              <div class="col-sm-3">
                <%= label_tag post.body %> 
              </div> 

              <div class="col-sm-3">  
                <%= button_to "Delete",
                    post_path(post.id),
                    method: :delete,
                    class: "btn btn-primary" %> 
              </div>

              <div class="col-sm-3">
                  <%= link_to "Edit",
                    edit_post_path(post.id),
                    class: "btn btn-primary" %>
              </div>

            </div><br>
          </div>
        </div>
    </div>
  </div>
<% end %>
