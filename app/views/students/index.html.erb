<h2 class="text-center"> List of Students </h2>

<div class="container text-center">
    <div class="row justify-content-md-center">

        <%= link_to 'Add_student', new_student_path %>
        
        <div class="col">

            <table class="table table-striped">
                <thead>
                    <tr>  
                        <th scope="col"> Id </th>
                        <th scope="col"> First name </th>
                        <th scope="col"> Last Name </th>
                        <th scope="col"> Date Of Birth </th>
                        <th scope="col"> Department </th>     
                    </tr>
                </thead>
  
                <tbody>
                    <% @student.each do |s|  %>
                        <tr>
                            <td> <%= s.id %> </td>
                            <td> <%= s.first_name %> </td>
                            <td> <%= s.last_name %> </td>
                            <td> <%= s.dob %> </td>
                            <td> <%= s.department %> </td>
                            <td> <%= link_to 'Update record', edit_student_path(s.id),class: "btn btn-primary" %> </td>
                            <td> <%= link_to 'Delete record', student_path(s.id), data: {turbo_method: :delete, turbo_confirm: "Confirmation for delete the student"} ,class: "btn btn-primary" %> </td> 
                        </tr>
                    <% end %>
                </tbody>
             </table>
        </div>
    </div>
</div>

