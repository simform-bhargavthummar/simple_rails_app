
<div class="text-center">
	<h1>Login page</h1>
	<%= form_with url: sign_in_path do |form| %>
		<%= form.label 'Email', :email %>
		<%= form.text_field :email %> <br><br>

		<%= form.label 'Password', :password %>
		<%= form.text_field :password %> <br><br>
		
		<%= link_to 'Sign up', new_user_path %>
		<%= form.submit 'Login' %>
	<% end %>
</div>