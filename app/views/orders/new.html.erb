<%= form_with model: @order do |form| %>
  <div class="container">
    <h1 class="text-center">Add Orders</h1>
       
    <div class="row">  
       <%= display_errors(@order) %>
      <div class="col-4">
        <%= form.label :quantity %><br>
        <%= form.text_field :quantity, class: "form-control" %>
        <%= custom_error(@order, :quantity) %>
      </div>
    </div><br/>

    <div class="row">
      <div class="col-4">
        <%= form.label "Product Name" %><br>
 
        <%= form.select :query_product_id, @product, class: "form-control" %>
        <%= custom_error(@order, :query_product_id) %>
      </div>
    </div> <br/>

    <div class="row">
      <div class="col-4">
        <%= form.label :customer_id %><br>
        <%= form.select :customer_id, @customer,class: "form-control" %>
        <%= custom_error(@order, :customer_id) %>
      </div>
    </div> <br/>
    
    <div class="row">
      <div class="col-4">
        <%= form.label :status %><br>
        <%= form.select :status, order_statuses, class: "form-control" %>
        <%= custom_error(@order, :status) %>
      </div>
    </div> <br/>

    <div>
      <%= form.submit "Insert data", class: "btn btn-primary" %>
    </div>
        
</div>

<% end %>